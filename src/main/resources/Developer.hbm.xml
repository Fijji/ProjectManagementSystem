<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="net.jdbc.pms.model.Developers" table="DEVELOPERS">
        <meta attribute="class-description">
            This class contains developer details.
        </meta>
        <id name="dev_id" type="int" column="dev_id">
            <generator class="assigned"/>
        </id>
        <property name="dev_name" column="dev_name" type="string"/>
        <property name="dev_salary" column="dev_salary" type="int"/>
    </class>

    <class name="net.jdbc.pms.model.Company" table="COMPANY">
        <meta attribute="class-description">
            This class contains company details.
        </meta>
        <id name="com_id" type="int" column="com_id">
            <generator class="native"/>
        </id>
        <property name="com_name" column="com_name" type="string"/>
    </class>

    <class name="net.jdbc.pms.model.Customers" table="Customers">
        <meta attribute="class-description">
            This class contains Customers details.
        </meta>
        <id name="customer_id" type="int" column="customer_id">
            <generator class="native"/>
        </id>
        <property name="customer_name" column="customer_name" type="string"/>
    </class>

    <class name="net.jdbc.pms.model.Projects" table="Customers">
        <meta attribute="class-description">
            This class contains Projects details.
        </meta>
        <id name="pj_id" type="int" column="pj_id">
            <generator class="native"/>
        </id>
        <property name="pj_name" column="pj_name" type="string"/>
        <property name="pj_desc" column="pj_desc" type="string"/>
        <property name="pj_cost" column="pj_cost" type="int"/>
    </class>

    <class name="net.jdbc.pms.model.Skills" table="Skills">
        <meta attribute="class-description">
            This class contains Skills details.
        </meta>
        <id name="sk_id" type="int" column="sk_id">
            <generator class="native"/>
        </id>
        <property name="sk_name" column="sk_name" type="string"/>
    </class>

</hibernate-mapping>